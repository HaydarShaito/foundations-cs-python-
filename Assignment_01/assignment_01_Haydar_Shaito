def strongPass(a):
  hasLowerLetter=False
  hasCapitalLetter=False
  hasDigit=False
  hasSpecialLetter=False
  if len(a) < 8:
      con=False
  for i in range(len(a)):
    if 'a'<=a[i]<='z':
      hasLowerLetter=True
    if 'A'<=a[i]<='Z':
      hasCapitalLetter=True
    if a[i].isnumeric():
      hasDigit=True
    if a[i]=='!' or a[i]=='$' or a[i]=='#' or a[i]=='?':
      hasSpecialLetter=True
  if(hasLowerLetter and hasCapitalLetter and hasDigit and hasSpecialLetter):
    return "strong pass"
  else:
    return "weak pass"
x = input("enter a pass :")    
print(strongPass(x))
print('---------------------------------------------')
